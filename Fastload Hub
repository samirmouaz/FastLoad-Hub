  <script>
    document.querySelectorAll(".download-btn").forEach(button => {
      button.addEventListener("click", function() {
        var downloadUrl = this.getAttribute("data-url");
        var countdownText = this.nextElementSibling;
        var countdownSpan = countdownText.querySelector(".countdown");

        this.disabled = true; // تعطيل زر التحميل
        countdownText.style.display = "block"; // إظهار العد التنازلي

        let timeLeft = 10;
        countdownSpan.textContent = timeLeft;

        let countdownInterval = setInterval(() => {
          timeLeft--;
          countdownSpan.textContent = timeLeft;

          if (timeLeft === 0) {
            clearInterval(countdownInterval);
            countdownText.textContent = "✅ التحميل بدأ...";
            window.location.href = downloadUrl; // فتح رابط التحميل
          }
        }, 1000);
      });
    });
  </script>
